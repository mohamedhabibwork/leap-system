{
  "name": "leap-lms-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Complete LMS Platform with NestJS Backend and Next.js Frontend",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "node -e \"if (process.env.npm_execpath && !process.env.npm_execpath.includes('npm')) { console.error('ERROR: This project uses npm. Please use npm install'); process.exit(1); }\"",
    "postinstall": "node -e \"try { require.resolve('turbo'); } catch(e) { console.log('Installing turbo...'); require('child_process').execSync('npm install turbo@^2.3.3 --save-dev', {stdio: 'inherit'}); }\"",
    "dev": "npx turbo run dev",
    "build": "npx turbo run build",
    "build:packages": "npx turbo run build --filter=@leap-lms/database --filter=@leap-lms/shared-types --filter=@leap-lms/ui",
    "build:backend": "npx turbo run build --filter=@leap-lms/backend",
    "build:web": "npx turbo run build --filter=web",
    "build:all": "npm run build:packages && npm run build:backend && npm run build:web",
    "lint": "npx turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "npx turbo run test",
    "test:faker": "cd apps/backend && npm run test:faker",
    "clean": "npx turbo run clean && rm -rf node_modules .turbo",
    "clean:all": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name 'dist' -type d -prune -exec rm -rf '{}' + && find . -name '.next' -type d -prune -exec rm -rf '{}' + && find . -name 'tsconfig.tsbuildinfo' -delete && find . -name '.turbo' -type d -prune -exec rm -rf '{}' + && rm -rf package-lock.json",
    "reinstall": "npm run clean:all && npm install",
    "db:generate": "cd packages/database && npm run generate",
    "db:push": "cd packages/database && npm run push",
    "db:migrate": "cd packages/database && npm run migrate",
    "db:studio": "cd packages/database && npm run studio",
    "seed": "cd apps/backend && npm run seed --keycloak-all",
    "seed:bun": "cd apps/backend && bun run seed:bun",
    "seed:reset": "cd apps/backend && npm run seed:reset",
    "seed:reset:bun": "cd apps/backend && bun run seed:reset:bun"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@types/qrcode": "^1.5.6",
    "@types/speakeasy": "^2.0.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx}": [
      "cd apps/web && eslint --fix",
      "prettier --write"
    ],
    "apps/backend/**/*.{ts}": [
      "cd apps/backend && eslint --fix",
      "prettier --write"
    ],
    "packages/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "npm@10.9.2",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0"
  },
  "optionalDependencies": {
    "@next/swc-darwin-arm64": "^16.1.1",
    "@next/swc-darwin-x64": "^16.1.1",
    "@next/swc-linux-arm64-gnu": "^16.1.1",
    "@next/swc-linux-arm64-musl": "^16.1.1",
    "@next/swc-linux-x64-gnu": "^16.1.1",
    "@next/swc-linux-x64-musl": "^16.1.1",
    "@next/swc-win32-arm64-msvc": "^16.1.1",
    "@next/swc-win32-ia32-msvc": "^14.2.16",
    "@next/swc-win32-x64-msvc": "^16.1.1",
    "lightningcss": "^1.30.2",
    "lightningcss-win32-x64-msvc": "^1.30.2"
  }
}
